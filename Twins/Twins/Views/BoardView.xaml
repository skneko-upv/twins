<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Twins.Views.BoardView">
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="{StaticResource backgroundColor}">
            <Grid
                AbsoluteLayout.LayoutBounds=".5,.03,.95,.25"
                         AbsoluteLayout.LayoutFlags="All">
                <StackLayout Orientation="Horizontal"
                             VerticalOptions="Start">
                    <Button Text="Pausa"
                            Clicked="OnPause" />
                    <Button Text="Silenciar"
                            Clicked="OnMute" />
                </StackLayout>
                <Grid
                      BackgroundColor="Black"
                      HeightRequest="175"
                      WidthRequest="175"
                      HorizontalOptions="Center"
                      VerticalOptions="Center">
                    <Grid
                        BackgroundColor="{StaticResource backgroundColor}"
                        HeightRequest="170"
                        WidthRequest="170"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        
                        <!-- Mete aqui la carta seleccionada! -->
                        
                    </Grid>
                </Grid>
                <StackLayout Orientation="Vertical"
                         HorizontalOptions="EndAndExpand"
                         VerticalOptions="Start"
                         Spacing="4">
                    <StackLayout Orientation="Horizontal"
                                 Spacing="1">
                        <Label FontSize="40">00</Label>
                        <Label FontSize="40">:</Label>
                        <Label FontSize="40">00</Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="EndAndExpand"
                                 Spacing="1">
                        <Label Margin="0,0,5,0"
                               FontAttributes="Bold">
                            Turno:
                        </Label>
                        <Label>0</Label>
                        <Label>:</Label>
                        <Label>00</Label>
                    </StackLayout>
                </StackLayout>
            </Grid>
            <ContentView AbsoluteLayout.LayoutBounds=".5,.75,.9,.60"
                         AbsoluteLayout.LayoutFlags="All">
                <RelativeLayout x:Name="boardArea">
                    <Grid x:Name="board"
                      RelativeLayout.HeightConstraint=
                        "{ConstraintExpression Type=RelativeToParent,
                                               Property=Height}"
                      RelativeLayout.WidthConstraint=
                        "{ConstraintExpression Type=RelativeToParent,
                                               Property=Width}"
                      Padding="10"
                      HorizontalOptions="CenterAndExpand"
                      VerticalOptions="CenterAndExpand"
                      BackgroundColor="#55ff0000">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button BackgroundColor="Red"
                            Grid.Row="0" Grid.Column="0" />
                        <Button BackgroundColor="Green"
                            Grid.Row="0" Grid.Column="1" />
                        <Button BackgroundColor="Aqua"
                            Grid.Row="1" Grid.Column="0" />
                        <Button BackgroundColor="Purple"
                            Grid.Row="1" Grid.Column="1" />
                        <Button BackgroundColor="Beige"
                            Grid.Row="2" Grid.Column="0" />
                        <Button BackgroundColor="Azure"
                            Grid.Row="2" Grid.Column="1" />
                    </Grid>
                </RelativeLayout>
            </ContentView>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>