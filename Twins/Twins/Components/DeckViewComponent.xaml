<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Twins.Components.DeckViewComponent"
             WidthRequest="200" HeightRequest="120">
        <Frame Padding="10"
               BorderColor="Black"
               CornerRadius="5"
               HasShadow="True">
               <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Image x:Name="BackCardImage"></Image>
                <Image x:Name="FrontCardImage"></Image>
            </StackLayout>
            <RadioButton x:Name="checkedRadioButton" GroupName="selectedDeck"></RadioButton>
        </StackLayout>
        </Frame>
</StackLayout>